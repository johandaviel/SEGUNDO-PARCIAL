extends ../../layout
block contenido
	div(class="col-md-6 remove-float center-block big-top-space")
		h1 Actualizar contacto
		form(action="/app/contactos/", method="POST")
			input(type="hidden", value="PUT", name="_method")
			div(class="form-group")
				label(for="name") Nombre
				input(type="text", name="name", placeholder="nombre", id="name", class="form-control")
			div
				label(for="lastname") Apellido
				input(type="text", name="lastname", class="form-control", id="lastname", placeholder="apellido")
			div(class="form-group")
				label(for="email") Email
				input(type="text", name="email", placeholder="Email", id="email", class="form-control")
			div
				label(for="telefono") Telefono
				input(type="text", name="telefono", class="form-control", id="telefono", placeholder="numero")
			div(class="row top-space")
				div(class="col-xs-12 col-sm-6")	
					input(type="submit", value="Guardar", class="btn btn-info")
				div(class="col-xs-12 col-sm-6 text-right")
					a(href="/app/contactos") Cancelar