extends ./layout
block contenido
	div(class="col-md-6 remove-float center-block big-top-space")
		form(action="/users", method="POST")
			h1 Crea tu cuenta
			div(class="form-group")
				label(for="email") Email
				input(type="text", name="email", placeholder="Email", id="email", class="form-control")
			div
				label(for="password") Contrasena
				input(type="password", name="password", class="form-control", id="password", placeholder="Contrasena")
			div
				label(for="password") Confirmar contrasena
				input(type="password", name="password_confirmation", class="form-control", id="password", placeholder="confirmar contrasena")
			div
				label(for="password") Usuario
				input(type="text", name="username", class="form-control", id="username", placeholder="digite usuario")
			div(class="row top-space")
				div(class="col-xs-12 col-sm-6")	
					input(type="submit", value="Iniciar sesion", class="btn btn-info")
				div(class="col-xs-12 col-sm-6 text-right")
					a(href="/login") Ya tengo cuenta